<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#6d9cd1"
    tools:context=".Step3Activity">

    <TextView
        android:id="@+id/textView6"
        android:layout_width="175dp"
        android:layout_height="56dp"
        android:layout_marginTop="100dp"
        android:text="Step 3/5"
        android:textColor="@color/white"
        android:textSize="40sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="What do you want to work on?"
        android:textColor="@color/white"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView6" />

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="323dp"
        android:layout_height="553dp"
        android:layout_marginStart="240dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.966"
        app:srcCompat="@drawable/silhouette_1" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/button7"
        android:layout_width="216dp"
        android:layout_height="68dp"
        android:layout_marginHorizontal="40dp"
        android:layout_marginEnd="188dp"
        android:background="@drawable/custombut"
        android:padding="15dp"
        android:text="Hands"
        android:onClick="gotoStep4"
        android:textAllCaps="false"
        android:textColor="#6d9cd1"
        android:textSize="25sp"
        app:layout_constraintBottom_toTopOf="@+id/button8"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.962" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/button8"
        android:layout_width="216dp"
        android:layout_height="68dp"
        android:layout_marginHorizontal="40dp"
        android:layout_marginEnd="188dp"
        android:onClick="gotoStep4"
        android:background="@drawable/custombut"
        android:padding="15dp"
        android:text="Spine"
        android:textAllCaps="false"
        android:textColor="#6d9cd1"
        android:textSize="25sp"
        app:layout_constraintBottom_toTopOf="@+id/button9"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.968" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/button9"
        android:layout_width="216dp"
        android:layout_height="68dp"
        android:layout_marginHorizontal="40dp"
        android:onClick="gotoStep4"
        android:layout_marginEnd="188dp"
        android:background="@drawable/custombut"
        android:padding="15dp"
        android:text="Torso"
        android:textAllCaps="false"
        android:textColor="#6d9cd1"
        android:textSize="25sp"
        app:layout_constraintBottom_toTopOf="@+id/button10"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.972" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/button10"
        android:layout_width="216dp"
        android:layout_height="68dp"
        android:layout_marginHorizontal="40dp"
        android:onClick="gotoStep4"
        android:layout_marginEnd="188dp"
        android:background="@drawable/custombut"
        android:padding="15dp"
        android:text="Legs"
        android:textAllCaps="false"
        android:textColor="#6d9cd1"
        android:textSize="25sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.751" />

</androidx.constraintlayout.widget.ConstraintLayout>